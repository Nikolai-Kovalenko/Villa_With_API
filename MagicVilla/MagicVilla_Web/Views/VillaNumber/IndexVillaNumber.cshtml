@model List<MagicVilla_Web.Models.Dto.VillaNumberDTO>

<br />
<div class="conteiner p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Villa Number List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="VillaNumber" asp-action="CreateVillaNumber" class="btn btn-outline-success"><i class="bi bi-plus-square"></i> Create New Villa Number</a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                   Vulla Name
                </th>
                <th>
                    Villa Number
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count(); i++)
            {
                <tr>
                    <td>@Model[i].Villa.Name</td>
                    <td>@Model[i].VillaNo</td>
                    <td>
                        <a asp-controller="VillaNumber" asp-action="UpdateVillaNumber" asp-route-villaNo="@Model[i].VillaNo" class="btn btn-primary"><i class="bi bi-pencil-square"></i></a>
                        <a asp-controller="VillaNumber" asp-action="DeleteVillaNumber" asp-route-villaNo="@Model[i].VillaNo" class="btn btn-danger"><i class="bi bi-trash3"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>
