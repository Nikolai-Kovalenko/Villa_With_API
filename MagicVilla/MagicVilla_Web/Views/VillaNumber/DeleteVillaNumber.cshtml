@model MagicVilla_Web.Models.ViewModels.VillaNumberDeleteVM

<form asp-action="DeleteVillaNumber">
    <br />
    <div class="conteiner border p-3">
        <h1 class="text-primary">Delete Villa</h1>
        <hr />

        <input hidden asp-asp-for="@Model.VillaNumber.VillaNo" />
        <div class="row">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="col-2">
                <label asp-for="VillaNumber.VillaNo" class="control-label pt-2" style="fonr-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="@Model.VillaNumber.VillaNo" disabled class="form-control" />
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.VillaId"  class="control-label pt-2" style="fonr-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <select asp-for="VillaNumber.VillaId" asp-items="@Model.VillaList" disabled class="form-select">
                    <option disabled selected>--Select Villa--</option>
                </select>
            </div>

            <div class="col-2">
                <label asp-for="VillaNumber.SpecialDetails" class="control-label pt-2" style="fonr-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <textarea asp-for="@Model.VillaNumber.SpecialDetails" readonly class="form-control"></textarea>
            </div>

            <div class="col-5 offset-2">
                <a asp-action="IndexVillaNumber" class="btn btn-primary form-control">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

